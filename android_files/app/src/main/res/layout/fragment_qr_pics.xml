<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBg"
    tools:context=".ui.profiles.ProfileFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/qr_pics_list"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:background="@drawable/comment_bg"
        android:paddingTop="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_pics_text"/>

    <TextView
        android:id="@+id/qr_pics_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Pictures of..."
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/texts"
        app:layout_constraintBottom_toTopOf="@+id/qr_pics_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
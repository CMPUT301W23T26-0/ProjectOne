<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="@drawable/qr_item_bg">

    <TextView
        android:id="@+id/scan_display_code_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="QR Code Name"
        android:textColor="@color/boldText"
        android:textStyle="bold"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/scan_display_code_image"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/scan_display_code_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code Score"
        android:textSize="20sp"
        android:textColor="@color/boldText"
        android:gravity="center"/>

    <TextView
        android:id="@+id/scan_display_code_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Text"
        android:textColor="@color/contentTexts"
        android:gravity="center"/>

    <TextView
        android:id="@+id/picture_prompt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you like to take a picture of the code's location?"
        android:textColor="@color/contentTexts"
        android:textSize="20sp"
        android:gravity="center"/>

</LinearLayout>